<div class="card-pf">
  <div class="login-pf-header">
    <h1><%= @mission.project_name.upcase %></h1>
  </div>
  <% flash.each do |key, value| %>
  <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
    <p>
      <%= value %>
    </p>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <% if is_logged_in %>
      <%= render 'form_new' %>
      <% else %>
      <%= render 'anon_show' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>Assets</h2>
      <%= render :template => 'assets/index' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">

    </div>
  </div>
</div>
