<div class="card-pf">
  <header class="login-pf-header">
    <h1>
      Missions
      <% if is_logged_in %>
        <%= link_to 'New mission', new_mission_path, class: "btn btn-success pull-right" %>
      <% end %>
    </h1>
  </header>

  <table class="table table-striped table-bordered table-hover" id="missions_table">
    <thead>
      <tr>
        <th><%= link_to "Project name", missions_path + "?sort=name"%></th>
        <th><%= link_to "Description", missions_path + "?sort=description"%></th>
        <th><%= link_to "Starting date", missions_path + "?sort=starting_date"%></th>
        <th><%= link_to "Ending date", missions_path + "?sort=ending_date"%></th>
        <th><%= link_to "Number of assets", missions_path + "?sort=assets"%></th>
        <th><%= link_to "Owner", missions_path + "?sort=user"%></th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <% @missions.each do |mission| %>
    <tr>
      <td><%= mission.project_name %></td>
      <td><%= mission.description %></td>
      <td><%= mission.starting_date.strftime("%d.%m.%Y") %></td>
      <td><%= mission.ending_date ? mission.ending_date.strftime("%d.%m.%Y") : '-' %></td>
      <th><%= mission.get_current_assets.count %></th>
      <th><% if mission.user != nil%><%=mission.user.firstname.capitalize %><% else%><%= "Deleted user" %><%end %></th>
      <td colspan="2">
        <%= link_to 'show', mission_path(mission), class: "btn btn-primary btn-xs" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
