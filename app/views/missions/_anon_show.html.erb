<div>
  <div class="row">
    <label class="col-sm-4 col-md-4">Owner</label>
    <div class="col-sm-8 col-md-8">
		<% if @mission.user != nil%><%=@mission.user.firstname.capitalize %><%= @mission.user.lastname.capitalize %><% else%><%= "Deleted user" %><%end %> 
    </div>
  </div>

  <div class="row">
    <label class="col-sm-4 col-md-4">Mission name</label>
    <div class="col-sm-8 col-md-8">
      <%= @mission.project_name %>
    </div>
  </div>
	
	<div class="row">
    <label class="col-sm-4 col-md-4">Location</label>
    <div class="col-sm-8 col-md-8">
      <%= @mission.location %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-4 col-md-4">Description</label>
    <div class="col-sm-8 col-md-8">
      <%= @mission.description %>
    </div>
  </div>
	
	<style>
	#csv
	{
		visibility: hidden;
	}
	#csv_logo:hover
	{
		cursor: pointer;
	}
	#csv:fullscreen
	{
		visibility:visible;
		display: flex;
		justify-content: center;
		height:600px;
		width:100%;
	}
	</style>
	<div class="row">
		<%= label_tag 'documents', "Documents", class: 'col-sm-4 col-md-4' %>
		<div class="col-sm-8 col-md-8">
			<%if @mission.documents != nil%>
				<div style="position:relative; top:0px; left:0px; width:100%; height:50px;">
					<div style="position:absolute; top:0px; left:0px; width:50px; height:20px; text-align:center;">
						<%= Document.find(@mission.documents).name%>
					</div>
					<div style="position:absolute; top:20px; left:0px; width:50px; height:30px; text-align:center;">
						<a href="<%= Document.find(@mission.documents).attachment %>">
							<% @rowarraydisp = CSV.read("public" + Document.find(@mission.documents).attachment_url, :headers => false, :col_sep => ";") %>
						</a>
						<div id="fullScreenElement1" class="button" onclick="display_csv('csv');">
							<p><img id="csv_logo" src="/csv_logo.png" width="20px" height="20px"></img></p>
						</div>
						<div id="csv">
							<table style="display:block; overflow:auto; align-self: center;">
								<% @rowarraydisp.each do |row| %>
									<tr>
										<% row.each do |val|%>
										<td>
											<%= val %>
										</td>
										<% end %>
									</tr>
								<% end %>
							</table>
						</div>
					</div>
					<script type="text/javascript">
						function display_csv(div) {
							document.getElementById(div).requestFullscreen();
						}
					</script>
				</div>
			<%end%>
		</div>
	</div>

  <div class="row">
    <label class="col-sm-4 col-md-4">Starting date</label>
    <div class="col-sm-8 col-md-8">
      <%= @mission.starting_date.strftime("%d.%m.%Y") %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-4 col-md-4">Ending date</label>
    <div class="col-sm-8 col-md-8">
      <%= @mission.ending_date ? @mission.ending_date.strftime("%d.%m.%Y") : '-' %>
    </div>
  </div>
</div>
