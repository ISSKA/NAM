<div>
  <div class="row">
    <label class="col-sm-2 col-md-2">Owner</label>
    <div class="col-sm-10 col-md-10">
      <%= @mission.user.firstname.capitalize %> <%= @mission.user.lastname.capitalize %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-2 col-md-2">Mission name</label>
    <div class="col-sm-10 col-md-10">
      <%= @mission.project_name %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-2 col-md-2">Description</label>
    <div class="col-sm-10 col-md-10">
      <%= @mission.description %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-2 col-md-2">Starting date</label>
    <div class="col-sm-10 col-md-10">
      <%= @mission.starting_date.strftime("%d.%m.%Y") %>
    </div>
  </div>

  <div class="row">
    <label class="col-sm-2 col-md-2">Ending date</label>
    <div class="col-sm-10 col-md-10">
      <%= @mission.ending_date ? @mission.ending_date.strftime("%d.%m.%Y") : '-' %>
    </div>
  </div>
</div>
