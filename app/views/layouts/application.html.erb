<!DOCTYPE html>
<html lang="en-us" class="layout-pf layout-pf-fixed">
  <head>
    <title>NAM</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body class="cards-pf">
    <%= render 'top_menu' %>
    <div class="container-fluid">
      <% flash.each do |key, value| %>
        <div id="error_explanation" class="alert alert-<%=key%> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="right: -2px;"><span aria-hidden="true">&times;</span></button>
          <p>
            <%= value %>
          </p>
        </div>
      <% end %>

      <%= render_breadcrumbs %>
      <%= yield %>
    </div>
    <%= render 'about_modal' %>
  </body>
</html>
