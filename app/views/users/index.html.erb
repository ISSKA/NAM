<div class="card-pf">
  <header class="login-pf-header">
    <h1>
      Utilisateurs
    </h1>
  </header>

  <table class="table table-striped table-bordered table-hover" id="users_table">
    <thead>
      <tr>
        <th>Prenom</th>
        <th>Nom</th>
		<th>Admin</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname.capitalize() %></td>
      <td><%= user.lastname.capitalize() %></td>
	  <td><%= user.admin %></td>
      <td colspan="2">
	    <% if current_logged_user != nil %>
		  <% if current_logged_user.admin? %>
			  <%= link_to "Supprimer", user, :method => :delete, :confirm => "Etes-vous certain&nbsp;?", :title => "Supprimer", class: "btn btn-danger" %>
			  <%= link_to "Donner le statut d'admin", user_set_admin_path(user), class: "btn btn-warning" %>
			  <%= link_to "Enlever le statut d'admin", user_remove_admin_path(user), class: "btn btn-primary btn-xs" %>
		  <% end %>
		<% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>