<h1>Tous les utilisateurs</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.firstname.capitalize() + " " + user.lastname.capitalize(), user %> admin = <%=user.admin %> 
	  <% if current_logged_user.admin? %>
        | <%= link_to "supprimer", user, :method => :delete, :confirm => "Etes-vous certain&nbsp;?", :title => "Supprimer" %>
      <% end %>
    </li>
  <% end %>
</ul>