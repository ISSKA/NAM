<div class="card-pf">
  <div class="text-center">
    <h1>Hi <%= current_logged_user.firstname.capitalize %></h1>
    <div class="text-center">
      <p class="mb-0">
        <%= current_logged_user.firstname.capitalize %> <%= current_logged_user.lastname.capitalize %>
      </p>
      <span class="badge badge-secondary"><%= current_logged_user.mail %></span>
    </div>
    <div style="padding:1em;">
      <%= link_to "Delete my account", user_delete_path(current_logged_user.id), class: "btn btn-sx btn-danger" %>
      <%= link_to "Edit my profil", edit_user_path(current_logged_user.id), class: "btn btn-sx btn-primary" %>
    </div>
  </div>
</div>
