<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   
  
<%= link_to "New Document", new_document_path %>   
<br>   
<br>   
  
<table border="3">   
   <thead>   
      <tr>   
         <th>Candidate Name</th>   
         <th>Download Link</th>   
         <th>Action</th>   
      </tr>   
   </thead>   
      
   <tbody>   
      <% @documents.each do |document| %>   
            
         <tr>   
            <td><%= document.name %></td>   
            <td><%= link_to "Download", document.attachment_url %></td>   
            <td><%= link_to "Delete",  document, method: :delete, confirm: "Are you sure you want to delete #{document.name}?" %></td>   
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table> 

<ul>
<% @documents.each do |document| %>    
 <li>   
   <%= document.name %> 
   <%= document.attachment_url %>  
   <a href="<%= document.attachment_url %>">
     <img src="<%= document.attachment_url %>" style="max-width:100%; max-height:200px;"></img>
   </a>
 </li>  
<% end %>   
	
</ul>
</div>  