<div class="card-pf">
  <div class="login-pf-header">
    <h1>
      <%= @asset.product_serial.upcase %>
      
      <% if is_logged_in %>
      <div class="pull-right">
        <%= link_to 'Edit', edit_asset_path(@asset), class: "btn btn-primary" %>
        <%= link_to 'Remove', asset_archive_path(@asset), method: :post, data: { :confirm => "Are you sure?" }, class: "btn btn-danger" %>
      </div>
      <% end %>
    </h1>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= render 'anon_show' %>
    </div>
  </div>
</div>

<%= render :template => 'missions/index' %>

<%= render 'battery_replacement/index' %>
